# YCS LMS Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000

# Authentication Configuration
VITE_TOKEN_STORAGE_SECURE=false

# reCAPTCHA Configuration
VITE_RECAPTCHA_SITE_KEY=

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_DEV_TOOLS=false

# Business Rules Configuration
VITE_CBM_THRESHOLD=29.0
VITE_THB_AMOUNT_THRESHOLD=1500

# Monitoring Configuration
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Map Configuration (if needed)
VITE_GOOGLE_MAPS_API_KEY=
VITE_NAVER_MAPS_CLIENT_ID=

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Debug Configuration
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_MOCK_API=true

# Social Login (if implemented)
VITE_GOOGLE_CLIENT_ID=
VITE_KAKAO_APP_KEY=
VITE_NAVER_CLIENT_ID=

# Progressive Web App Configuration
VITE_PWA_NAME="YCS LMS"
VITE_PWA_SHORT_NAME="YCS LMS"
VITE_PWA_DESCRIPTION="YCS 물류관리 시스템"
VITE_PWA_THEME_COLOR="#1976d2"
VITE_PWA_BACKGROUND_COLOR="#ffffff"

# Internationalization
VITE_DEFAULT_LOCALE=ko
VITE_AVAILABLE_LOCALES=ko,en

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000