# YCS LMS Backend Environment Variables
# 프로덕션 배포 시 반드시 설정해야 하는 환경변수들

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# JWT Configuration (REQUIRED)
# 최소 512비트(64바이트) Base64 인코딩된 시크릿 키
# 생성 예시: openssl rand -base64 64
JWT_SECRET=
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=ycs-lms
JWT_CLOCK_SKEW=300

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/ycs_lms
DB_USERNAME=
DB_PASSWORD=
DB_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
FILE_UPLOAD_DIR=./uploads
FILE_MAX_SIZE=10485760

# External API Keys
EMS_API_URL=
EMS_API_KEY=
HS_API_URL=
HS_API_KEY=
EXCHANGE_RATE_API_URL=
EXCHANGE_RATE_API_KEY=

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Server Configuration
SERVER_PORT=8080

# Security Headers
SECURITY_REQUIRE_SSL=true
SECURITY_HSTS_MAX_AGE=31536000

# AWS Configuration (if used)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=

# Monitoring (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_RESOURCE_ATTRIBUTES=service.name=ycs-lms

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_FILE_PATH=logs/ycs-lms.log