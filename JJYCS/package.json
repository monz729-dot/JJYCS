{
  "name": "ycs-lms-monorepo",
  "version": "1.0.0",
  "description": "YSC Logistics Management System - Full Stack Application",
  "scripts": {
    "dev:api": "cd backend && ./mvnw.cmd spring-boot:run",
    "dev:web": "cd frontend && npm run dev",
    "dev:all": "concurrently -k \"npm:dev:api\" \"npm:dev:web\"",
    "build:api": "cd backend && ./mvnw.cmd clean package",
    "build:web": "cd frontend && npm run build",
    "build:all": "npm run build:api && npm run build:web",
    "test:api": "cd backend && ./mvnw.cmd test",
    "test:web": "cd frontend && npm run test",
    "start": "npm run dev:all",
    "postinstall": "cd frontend && npm install"
  },
  "keywords": [
    "logistics",
    "management",
    "system",
    "vue",
    "spring-boot"
  ],
  "author": "YSC Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "puppeteer": "^24.17.1"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
