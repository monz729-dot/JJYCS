# YSC LMS 프론트엔드 개발환경 설정

# 백엔드 API URL
VITE_API_BASE_URL=http://localhost:8081/api

# 개발 모드 설정
NODE_ENV=development

# 개발서버 포트
PORT=3008
VITE_PORT=3008

# 개발 도구 활성화
VITE_ENABLE_DEVTOOLS=true

# 디버깅 모드
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# HMR (Hot Module Replacement) 설정
VITE_HMR=true

# 소스맵 생성 (개발환경에서는 활성화)
VITE_SOURCEMAP=true

# 개발환경 특화 설정
VITE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=true

# 캐시 비활성화 (개발 중 변경사항 즉시 반영)
VITE_NO_CACHE=true

# Error Overlay 활성화
VITE_ERROR_OVERLAY=true

# 개발환경 정보
VITE_APP_NAME=YSC 물류관리시스템
VITE_APP_VERSION=2.0.0-dev
VITE_APP_ENV=development
